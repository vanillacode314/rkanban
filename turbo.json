{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "outputs": [
        "dist/**"
      ],
      "dependsOn": [
        "^build"
      ],
      "passThroughEnv": [
        "AUTH_SECRET",
        "TURSO_AUTH_TOKEN",
        "TURSO_CONNECTION_URL",
        "RESEND_API_KEY",
        "NOTIFICATIONS_EMAIL_ADDRESS"
      ]
    },
    "type-check": {},
    "dev": {
      "cache": false,
      "persistent": true,
      "interactive": false,
      "passThroughEnv": [
        "AUTH_SECRET",
        "TURSO_AUTH_TOKEN",
        "TURSO_CONNECTION_URL",
        "RESEND_API_KEY",
        "NOTIFICATIONS_EMAIL_ADDRESS"
      ]
    },
    "format": {}
  }
}
